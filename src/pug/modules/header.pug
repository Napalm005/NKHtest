header.header
	a(class='header__logo  logo' href='#')
		img(class='logo__img' src='img/logo.svg')
	nav.header__nav.nav
		ul.nav__list
			li.nav__item.nav__item--home Для <br> дома
			li.nav__item
				-var subNavList1 ={'Услуги': 'services.html', 'Инструкции': 'instructions.html','Документы': 'documents.html','Тарифы': 'tarifs.html'};
				ul.nav__sub-menu.sub-menu
					each html,text in subNavList1
						li.sub-menu__item: a(class='sub-menu__link' href= html) #{text}
			li.nav__item.nav__item--business Для <br> бизнеса
			li.nav__item
				-var subNavList2 ={'Документы': 'documents.html','Услуги': 'services.html','Тарифы': 'tarifs.html'};
				ul.nav__sub-menu.sub-menu.sub-menu--business
					each html,text in subNavList2
						li.sub-menu__item: a(class='sub-menu__link' href= html) #{text}
	a(class='header__dev' href='#')
		img(class='header__dev-img' src='img/dev.png')

